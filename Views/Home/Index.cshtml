@model IEnumerable<Employee>
@{ Layout = "_Layout"; ViewBag.Title = "All Employees";}
 
<h2>All Employees</h2>
<a asp-action="AddEmployee" class="btn btn-sm btn-primary">Add Employee</a>
<a asp-action="GetEmployee" class="btn btn-sm btn-secondary">Get Employee</a>
 
<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
			<th>Department</th>
            <th>Salary</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.Name</td>
                <td>@r.Department</td>
                <td>@r.Salary</td>
                <td>
                    <a asp-action="UpdateEmployee" asp-route-id="@r.Id">
                        <img src="/icon/edit.png" />
                    </a>
                </td>
                <td>
                    <form asp-action="DeleteEmployee" method="post">
                        <input type="hidden" value="@r.Id" name="EmployeeId" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>